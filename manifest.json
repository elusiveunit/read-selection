{
  "name": "Read selection",
  "description": "Read the selected text with Google Cloud Text-to-Speech API.",
  "version": "1.0.0",
  "manifest_version": 2,
  "author": "elusiveunit",
  "homepage_url": "https://github.com/elusiveunit/read-selection",
  "applications": {
    "gecko": {
      "id": "elusiveunit@gmail.com",
      "strict_min_version": "57.0"
    }
  },
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "options_ui": {
    "page": "dist/options-page.html",
    "browser_style": true,
    "chrome_style": true
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "*://texttospeech.googleapis.com/*"
  ]
}
